<?xml version="1.0" encoding="utf-8"?>
<!-- Used for most UI about button (Done, Search, Call and so on) -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="@color/list_divider" android:startColor="@color/list_divider" />

            
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:endColor="@color/background_secondaryaction" android:startColor="@color/background_secondaryaction" />

            <stroke android:width="1dp" android:color="#e0e0e0" />

            
        </shape></item>

</selector>