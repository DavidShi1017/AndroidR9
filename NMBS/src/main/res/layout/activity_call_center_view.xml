<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:fitsSystemWindows="true"
	android:background="@color/background_secondaryaction">
	<RelativeLayout
		android:id="@+id/rl_station_info_detail_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/background_activity_title"
		android:padding="10dp">
		<ImageView
			android:id="@+id/iv_back"
			android:layout_width="@dimen/header_menu_size"
			android:layout_height="@dimen/header_menu_size"
			android:padding="10dp"
			android:onClick="back"
			android:visibility="invisible"
			android:layout_marginRight="@dimen/margin_small"
			android:background="@color/background_primaryaction"
			android:src="@drawable/ic_back" />
		<TextView
			android:id="@+id/tv_station_info_detail_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/aftersales_title"
			android:textColor="@color/textcolor_secondaction"
			android:textSize="@dimen/textsize_header" />
	</RelativeLayout>
	<ScrollView
		android:id="@+id/sv_station_info_detail_content"
		android:layout_below="@id/rl_station_info_detail_header"
		android:layout_above="@+id/ll_call_center_footer"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_refund_or_exchange"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/padding_bigger"
				android:textSize="@dimen/textsize_smaller"
				android:text="@string/aftersales_introduction_line1"/>
			<TextView
				android:id="@+id/tv_online_aftersales_introduction"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="@dimen/margin_small"
				android:paddingLeft="@dimen/padding_bigger"
				android:paddingRight="@dimen/padding_bigger"
				android:paddingBottom="@dimen/padding_bigger"
				android:textSize="@dimen/textsize_smaller"
				android:text="@string/aftersales_introduction_line2"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:gravity="center"
				android:background="@color/background_view_button">
				<Button
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_marginTop="@dimen/margin_default"
					android:layout_marginBottom="@dimen/margin_default"
					android:layout_marginLeft="@dimen/margin_default"
					android:gravity="center"
					android:layout_weight="0.5"
					android:onClick="exchange"
					android:background="@color/background_secondaryaction"
					android:text="@string/aftersales_exchange_button_title"
					android:textColor="@color/textcolor_thirdaction" />
				<Button
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_marginLeft="@dimen/margin_default"
					android:layout_marginTop="@dimen/margin_default"
					android:layout_marginBottom="@dimen/margin_default"
					android:layout_marginRight="@dimen/margin_default"
					android:layout_weight="0.5"
					android:onClick="refund"
					android:gravity="center"
					android:background="@color/background_secondaryaction"
					android:text="@string/aftersales_refund_button_title"
					android:textColor="@color/textcolor_thirdaction" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical">
				<View
					android:layout_width="0dp"
					android:layout_height="0.5dp"
					android:background="@color/line_grey"
					android:layout_weight="1"/>
				<TextView
					android:id="@+id/tv_online_aftersales_introduction"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/padding_bigger"
					android:textStyle="bold"
					android:textSize="@dimen/textsize_smaller"
					android:textColor="@color/color_black"
					android:text="@string/general_or"/>
				<View
					android:layout_width="0dp"
					android:layout_height="0.5dp"
					android:background="@color/line_grey"
					android:layout_weight="1"/>
			</LinearLayout>

			<TextView
				android:id="@+id/tv_call_center_intro"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/padding_bigger"
				android:textSize="@dimen/textsize_smaller"
				android:text="@string/call_center_info"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingRight="@dimen/padding_bigger"
				android:paddingLeft="@dimen/padding_bigger"
				android:textSize="@dimen/textsize_smaller"
				android:textColor="@color/textcolor_pink"
				android:text="@string/call_center_avaliable_info"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_default"
				android:background="@color/background_light_blue">
				<TextView
					android:id="@+id/tv_call_center_dnr_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:gravity="center_vertical"
					android:textSize="@dimen/textsize_smaller"
					android:padding="@dimen/padding_bigger"
					android:text="@string/general_booking_reference"/>
				<TextView
					android:id="@+id/tv_dnr"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:paddingTop="@dimen/padding_bigger"
					android:paddingBottom="@dimen/padding_bigger"
					android:textSize="@dimen/textsize_smaller"
					android:layout_toRightOf="@id/tv_call_center_dnr_label"
					android:textColor="@color/textcolor_thirdaction"
					android:text="asdf"
					/>
			</RelativeLayout>
			<View
				android:id="@+id/v_line"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="@dimen/margin_medium"
				android:background="@color/background_group_title" />

			<RelativeLayout
				android:id="@+id/rl_call_center_share_travel_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:gravity="center_vertical"
					android:padding="@dimen/padding_bigger"
					android:textColor="@color/textcolor_thirdaction"
					android:textSize="@dimen/textsize_small"
					android:text="@string/call_center_share_data"
					/>

				<android.support.v7.widget.SwitchCompat
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:id="@+id/sw_share_data"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_weight="1"
					android:background="@null"
					app:showText="false"
					android:padding="@dimen/padding_bigger"
					app:theme="@style/Custom.Widget.SwitchCompat" />
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/ll_call_center_phone_number_layout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:background="@color/background_light_grey"
				android:padding="@dimen/padding_default">
				<TextView
					android:id="@+id/tv_phone_lable"
					android:layout_width="wrap_content"
					android:padding="@dimen/padding_default"
					android:textSize="@dimen/textsize_smaller"
					android:gravity="center"
					android:layout_height="50dp"
					android:background="@drawable/station_info_tab_grey_border"
					android:text="@string/call_center_gsm_nr"/>
				<TextView
					android:id="@+id/tv_number_error"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/tv_phone_lable"
					android:layout_alignParentBottom="true"
					android:layout_alignParentRight="true"
					android:layout_marginRight="@dimen/margin_default"
					android:layout_marginTop="@dimen/margin_default"
					android:visibility="gone"
					android:textSize="@dimen/textsize_smallest"
					android:text="@string/call_center_gsm_nr"
					android:textColor="@color/textcolor_error"
					android:textStyle="italic"/>
				<LinearLayout
					android:id="@+id/ll_call_center_phone_number_edit"
					android:layout_toRightOf="@+id/tv_phone_lable"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_weight="0.7"

					android:background="@drawable/station_info_tab_light_border">
					<ImageView
						android:id="@+id/iv_call_center_selected_country_logo"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="0.3"
						android:onClick="changePhoneNumberPrefix"
						android:layout_marginLeft="@dimen/margin_small"
						android:src="@drawable/ic_belgium_number_prefix"
						android:layout_gravity="center_vertical"/>
					<ImageView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="0.1"
						android:src="@drawable/ic_arrow_gray"
						android:layout_gravity="center_vertical"/>
					<EditText
						android:id="@+id/et_call_center_phoneNumber"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="0.6"
						android:padding="@dimen/padding_bigger"
						android:background="@null"
						android:inputType="number"
						android:maxLength="15"
						android:textSize="@dimen/textsize_small"
						android:textColor="@color/textcolor_primaryaction"
						android:gravity="center_vertical" />
				</LinearLayout>
			</RelativeLayout>

			<LinearLayout
				android:id="@+id/ll_call_center_exchange_refund_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/margin_default"
				android:background="@color/background_light_grey"
				android:padding="@dimen/padding_bigger">
				<TextView
					android:id="@+id/tv_call_center_exchange_tickets"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:padding="@dimen/padding_default"
					android:textSize="@dimen/textsize_small"
					android:layout_height="match_parent"
					android:gravity="center"
					android:clickable="true"
					android:onClick="exchangeTickets"
					android:background="@color/background_button_secondaction"
					android:text="@string/call_center_exchange_tickets"
					android:textColor="@color/textcolor_secondaction"/>
				<TextView
					android:id="@+id/tv_call_center_refund_tickets"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:gravity="center"
					android:clickable="true"
					android:onClick="refundTickets"
					android:padding="@dimen/padding_default"
					android:textSize="@dimen/textsize_small"
					android:layout_height="match_parent"
					android:background="@color/background_secondaryaction"
					android:text="@string/call_center_refund_tickets"
					android:textColor="@color/textcolor_primaryaction"/>
			</LinearLayout>
			<TextView
				android:id="@+id/tv_call_center_guid"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/textsize_small"
				android:padding="@dimen/padding_bigger"
				android:text="@string/call_center_exchange_refund_info"/>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:id="@+id/ll_call_center_footer"
		android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/background_menu_home"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/ll_call_center_international_layout"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/padding_default"
				android:orientation="vertical">
				<Button
					android:id="@+id/btn_call_center_int"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:onClick="callBelgiumOrInternational"
					android:drawableLeft="@drawable/ic_phone"
					android:background="@color/background_secondaryaction"
					android:textSize="@dimen/textsize_smaller"
					android:text="+32 70 79 79"
					android:textColor="@color/textcolor_thirdaction"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_marginTop="@dimen/margin_small"
					android:textColor="@color/textcolor_secondaction"
					android:text="@string/call_center_int"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_call_center_belgium_layout"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/padding_default"
				android:orientation="vertical">
				<Button
					android:id="@+id/btn_call_center_belgium"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/ic_phone"
					android:onClick="callBelgiumOrInternational"
					android:background="@color/background_secondaryaction"
					android:textSize="@dimen/textsize_smaller"
					android:textColor="@color/textcolor_thirdaction"
					android:text="+0 70 79 79 79"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_marginTop="@dimen/margin_small"
					android:textColor="@color/textcolor_secondaction"
					android:text="@string/call_center_belgium"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
</RelativeLayout>