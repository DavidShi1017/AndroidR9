<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_secondaryaction"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/v_stationboard_result_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_group_title" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/iv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@color/background_button_secondaction"
            android:gravity="center"
            android:text="Saturday 21 march 2015"
            android:textSize="@dimen/textsize_least"
            android:textColor="@color/textcolor_secondaction" />


        <TextView
            android:id="@+id/tv_watchout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/general_watchout" android:textSize="@dimen/textsize_least"
            android:textColor="@color/color_grey"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_schedules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_above="@+id/ll_later_train"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>