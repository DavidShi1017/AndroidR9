<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:clickable="false"
    android:paddingTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/list_item_bg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_li_alert_connection_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_alert_subscription_station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_small"
                android:textColor="@color/text_blue_color" />
            <TextView
                android:id="@+id/tv_alert_subscription_station_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_alert_subscription_id"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_alert_subscription_reconctx"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ll_alert_connection_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/ll_li_alert_connection_title_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow"/>
        <LinearLayout
            android:id="@+id/ll_alert_connection_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_alignRight="@id/ll_li_alert_connection_title_content"
            android:layout_alignParentRight="true"
            android:background="@color/background_menu_home"
            android:padding="@dimen/padding_small">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
