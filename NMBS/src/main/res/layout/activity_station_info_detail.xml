<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_secondaryaction">
    <RelativeLayout
        android:id="@+id/rl_station_info_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_activity_title"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/header_menu_size"
            android:layout_height="@dimen/header_menu_size"
            android:padding="10dp"
            android:onClick="back"
            android:visibility="gone"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@color/background_primaryaction"
            android:src="@drawable/ic_back" />
        <TextView
            android:id="@+id/tv_station_info_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/stationinfo_list_title"
            android:textColor="@color/textcolor_secondaction"
            android:textSize="@dimen/textsize_header" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_station_info_detail_content"
        android:layout_below="@id/rl_station_info_detail_header"
        android:layout_above="@+id/ll_station_info_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroud_light_blue_color"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_station_info_detail_header_address_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_small" />
                    <TextView
                        android:id="@+id/tv_station_info_detail_header_address_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_small" />
                    <TextView
                        android:id="@+id/tv_station_info_detail_header_opening_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_small" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_map"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:onClick="goToStationInfoMap"
                    android:background="@color/background_button_secondaction">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stationinfo_map"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/group_default"
                    android:padding="1dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tv_station_info_detail_tab_information"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="goToInformation"
                        android:background="@color/background_group_title"
                        android:textSize="@dimen/textsize_small"
                        android:padding="@dimen/padding_small"
                        android:text="@string/general_information"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/background_group_title" />
                    <TextView
                        android:id="@+id/tv_station_info_detail_tab_facilities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="goToFacilities"
                        android:background="@color/background_secondaryaction"
                        android:textSize="@dimen/textsize_small"
                        android:padding="@dimen/padding_small"
                        android:text="@string/stationinfo_facilities"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/background_group_title" />

                    <TextView
                        android:id="@+id/tv_station_info_detail_tab_parking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="goToParking"
                        android:background="@color/background_secondaryaction"
                        android:textSize="@dimen/textsize_small"
                        android:padding="@dimen/padding_small"
                        android:text="@string/stationinfo_parking"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv_station_info_detail_information"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv_station_info_detail_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_default"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv_station_info_detail_parking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_default"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_station_info_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_view_button"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_pdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="openPDF"
            android:background="@color/background_secondaryaction"
            android:textSize="@dimen/textsize_medium"
            android:layout_margin="@dimen/padding_default"
            android:text="@string/stationinfo_floorplan"
            android:textColor="@color/textcolor_thirdaction"/>
        <Button
            android:id="@+id/btn_more_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="openMoreDetails"
            android:background="@color/background_secondaryaction"
            android:textSize="@dimen/textsize_medium"
            android:layout_margin="@dimen/padding_default"
            android:text="@string/station_moreinfo"
            android:textColor="@color/textcolor_thirdaction"/>
    </LinearLayout>
</RelativeLayout>