<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light_grey">
        <LinearLayout
            android:id="@+id/ll_schedule_result_header_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_schedule_message_head_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_schedule_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blue_color"
                android:textSize="@dimen/textsize_medium"
                android:text="Ogone payment not possible"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_schedule_plus_action"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_plus"/>
        <TextView
            android:id="@+id/tv_schedule_message_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:padding="@dimen/padding_default"
            android:layout_below="@id/ll_schedule_result_header_item_title"
            android:text="11/11 - 12/11"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_schedule_message_desc_layou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/group_default"
        android:paddingLeft="1dp"

        android:paddingRight="1dp">
        <TextView
            android:id="@+id/tv_schedule_message_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default"
            android:text="@string/call_center_exchange_refund_info"/>
        <ImageView
            android:id="@+id/iv_schedule_message_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_schedule_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_margin="@dimen/margin_small"
            android:background="@color/background_button_secondaction"
            android:gravity="center"
            android:text="@string/settings_view_delete_personal_info"
            android:textColor="@color/textcolor_secondaction" />
    </LinearLayout>

</LinearLayout>