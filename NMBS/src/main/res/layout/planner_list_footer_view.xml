<?xml version="1.0" encoding="utf-8"?><!--For the PlannerSearchResultActivity ListView and DepartureReturnActivity ListView Footer-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planner_list_footer_LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentTop="true"
    android:background="@color/background_view_button"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/travel_view_list_footer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_later_trains"

        android:gravity="center_horizontal"
        android:text="@string/general_later_trains"
        android:textSize="@dimen/textsize_medium"
        android:textColor="@color/textcolor_secondaction" />

</LinearLayout>