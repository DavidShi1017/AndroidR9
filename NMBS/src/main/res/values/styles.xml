        </item>
        <item name="android:textColorHint">@color/hint_text_light</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
    </style>

