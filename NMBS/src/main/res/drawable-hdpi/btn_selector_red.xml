<?xml version="1.0" encoding="utf-8"?>
<!-- Used for most UI about button (Done, Search, Call and so on) -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
           <gradient android:angle="90" android:endColor="#ffb71a" android:startColor="#ffb71a" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
        
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
        
            <gradient android:angle="270" android:endColor="#f71314" android:startColor="#f18991" android:centerColor="#e52735"/>

            <corners android:radius="5dp" />
 		<stroke
        android:width="0.5dp"
        android:color="#354f73" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape></item>

</selector>