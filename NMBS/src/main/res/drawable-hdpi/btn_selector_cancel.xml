<?xml version="1.0" encoding="utf-8"?>
<!-- Used for most UI about button (Done, Search, Call and so on) -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#ffb71a" android:startColor="#ffb71a" />
			<padding  android:top="5dp" 
			    android:bottom="5dp"/>
            <corners android:radius="5dp" />

           
        </shape></item>
        
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:endColor="#006ab3" android:startColor="#3196dc" />

            <corners android:radius="5dp" />
 		<stroke
        android:width="0.5dp"
        android:color="#354f73" />
            
        </shape>
        
        </item>
</selector>