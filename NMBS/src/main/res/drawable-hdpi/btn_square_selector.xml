<?xml version="1.0" encoding="utf-8"?>
<!-- Used for most UI about button (Done, Search, Call and so on) -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#ffb71a" android:startColor="#ffb71a" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="270" android:endColor="#006ab3" android:startColor="#006ab3" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape></item>

</selector>