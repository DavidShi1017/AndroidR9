<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_secondaryaction"
    android:paddingBottom="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bg"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:padding="1dp">
        <ImageView
            android:id="@+id/iv_schedule_result_connection_not_possible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/ic_exclamation"/>
        <TextView
            android:id="@+id/tv_li_schedule_result_night_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue_color"
            android:layout_marginLeft="@dimen/margin_big"
            android:textStyle="bold"
            android:text="@string/general_night"/>
        <RelativeLayout
            android:id="@+id/ll_li_schedule_result_time_and_logo_layout"
            android:layout_below="@id/tv_li_schedule_result_night_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="@dimen/textsize_least"
                    android:text="@string/general_departure"/>
                <TextView
                    android:id="@+id/tv_li_schedule_result_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold"
                    android:text="07:28"/>
                <TextView
                    android:id="@+id/tv_li_schedule_result_departure_delay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_smallest"
                    android:layout_gravity="left"
                    android:visibility="gone"
                    android:textColor="@color/textcolor_error" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0.1"
                android:layout_toRightOf="@+id/ll_departure"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_small_arrow"/>
            <LinearLayout
                android:id="@+id/ll_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_arrow"
                android:layout_weight="1.2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/margin_small"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_least"
                    android:text="@string/general_arrival"/>
                <TextView
                    android:id="@+id/tv_li_schedule_result_arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold"
                    android:text="07:28"/>
                <TextView
                    android:id="@+id/tv_li_schedule_result_arrive_delay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_smallest"
                    android:visibility="gone"
                    android:textColor="@color/textcolor_error" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_transfer"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_arrival"
                android:padding="@dimen/padding_small"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_small"
                android:gravity="center"
                android:background="@color/background_light_grey"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_li_schedule_result_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pick_color"
                    android:gravity="center"
                    android:textSize="@dimen/textsize_least"
                    android:textStyle="bold"
                    android:text="@string/general_direct_train"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:background="@color/background_secondaryaction">
                </View>

                <TextView
                    android:id="@+id/tv_li_schedule_result_duration_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_least"
                    android:text="07:28"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_li_schedule_result_magnifying_glass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_magnifying"/>
            <LinearLayout
                android:id="@+id/fl_schedule_result_train_type_icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_transfer"
                android:layout_toLeftOf="@+id/iv_li_schedule_result_magnifying_glass"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_default">


            </LinearLayout>




        </RelativeLayout>
        <View
            android:id="@+id/v_li_schedule_line_view"
            android:layout_below="@id/ll_li_schedule_result_time_and_logo_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="gone"
            android:background="@color/background_group_title"/>
        <LinearLayout
            android:id="@+id/ll_li_schedule_result_connection_not_possible"
            android:layout_below="@id/v_li_schedule_line_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_small"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_exclamation"/>
            <TextView
                android:id="@+id/tv_not_possible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_smaller"
                android:text="@string/dossier_detail_transfer_not_possible"
                android:layout_marginLeft="@dimen/margin_small"
                android:textColor="@color/textcolor_error"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_li_schedule_result_night_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_night"/>
</RelativeLayout>
